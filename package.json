{
  "name": "steam-game-idler",
  "version": "0.1.0",
  "description": "Farm trading cards, manage achievements, and boost playtime effortlessly with Steam Game Idler",
  "author": "Autapomorph",
  "private": true,
  "workspaces": [
    "docs"
  ],
  "scripts": {
    "dev": "next dev",
    "dev:docs": "npm run dev -w steam-game-idler-docs",
    "dev:all": "run-p tauri:dev dev:docs",
    "pub:docs": "npm run pub -w steam-game-idler-docs",
    "build": "next build",
    "build:docs": "npm run build -w steam-game-idler-docs",
    "build:all": "run-s build build:docs",
    "start": "next start",
    "start:docs": "npm run start -w steam-game-idler-docs",
    "lint": "eslint .",
    "lint:docs": "npm run lint -w steam-game-idler-docs",
    "lint:all": "run-s lint lint:docs",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "prepare": "husky",
    "prettier": "prettier --write .",
    "main": "git checkout main && git pull && git fetch -p"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@heroui/react": "^2.8.5",
    "@internationalized/date": "^3.10.0",
    "@tauri-apps/api": "~2.8.0",
    "@tauri-apps/plugin-autostart": "~2.5.0",
    "@tauri-apps/plugin-clipboard-manager": "^2.3.2",
    "@tauri-apps/plugin-dialog": "~2.4.2",
    "@tauri-apps/plugin-fs": "~2.4.0",
    "@tauri-apps/plugin-notification": "~2.3.0",
    "@tauri-apps/plugin-os": "~2.3.0",
    "@tauri-apps/plugin-process": "~2.3.0",
    "@tauri-apps/plugin-shell": "~2.3.0",
    "@tauri-apps/plugin-updater": "~2.9.0",
    "@tauri-apps/plugin-window-state": "~2.4.0",
    "framer-motion": "12.23.25",
    "geist": "^1.3.1",
    "github-markdown-css": "^5.8.1",
    "i18next": "^25.6.3",
    "i18next-browser-languagedetector": "^8.0.4",
    "moment": "^2.30.1",
    "next": "^16.0.10",
    "next-themes": "^0.4.6",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-i18next": "^16.3.5",
    "react-icons": "^5.5.0",
    "react-markdown": "^10.1.0",
    "react-window": "^1.8.11",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/compat": "^2.0.1",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.39.2",
    "@tailwindcss/postcss": "^4.1.17",
    "@tauri-apps/cli": "^2.8.4",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.2",
    "@types/react-window": "^1.8.8",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.39.2",
    "eslint-config-airbnb-extended": "^3.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react-refresh": "^0.4.26",
    "eslint-plugin-unused-imports": "^4.3.0",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "lint-staged": "^16.2.7",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.8.3"
  }
