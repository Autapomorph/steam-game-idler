{
  "name": "steam-game-idler",
  "version": "0.1.0",
  "description": "Farm trading cards, manage achievements, and boost playtime effortlessly with Steam Game Idler",
  "author": "Autapomorph",
  "private": true,
  "workspaces": [
    "docs"
  ],
  "scripts": {
    "dev": "next dev",
    "dev:docs": "npm run dev -w steam-game-idler-docs",
    "dev:all": "run-p tauri:dev dev:docs",
    "pub:docs": "npm run pub -w steam-game-idler-docs",
    "build": "next build",
    "build:docs": "npm run build -w steam-game-idler-docs",
    "build:all": "run-s build build:docs",
    "start": "next start",
    "start:docs": "npm run start -w steam-game-idler-docs",
    "lint": "run-s -c typecheck lint:js",
    "lint:js": "eslint",
    "lint:docs": "npm run lint -w steam-game-idler-docs",
    "lint:all": "run-s -c lint lint:docs",
    "lint:staged": "lint-staged --relative",
    "typecheck": "tsc --noEmit",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "prettier": "prettier --write .",
    "prepare": "husky || true"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@heroui/react": "^2.8.9",
    "@internationalized/date": "^3.11.0",
    "@tauri-apps/api": "~2.10.1",
    "@tauri-apps/plugin-autostart": "~2.5.1",
    "@tauri-apps/plugin-clipboard-manager": "^2.3.2",
    "@tauri-apps/plugin-dialog": "~2.6.0",
    "@tauri-apps/plugin-fs": "~2.4.5",
    "@tauri-apps/plugin-notification": "~2.3.3",
    "@tauri-apps/plugin-opener": "^2.5.3",
    "@tauri-apps/plugin-os": "~2.3.2",
    "@tauri-apps/plugin-process": "~2.3.1",
    "@tauri-apps/plugin-updater": "~2.10.0",
    "@tauri-apps/plugin-window-state": "~2.4.1",
    "framer-motion": "12.34.0",
    "geist": "^1.7.0",
    "github-markdown-css": "^5.9.0",
    "i18next": "^25.8.7",
    "i18next-browser-languagedetector": "^8.2.1",
    "moment": "^2.30.1",
    "next": "^16.1.6",
    "next-themes": "^0.4.6",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "react-error-boundary": "^6.1.1",
    "react-i18next": "^16.5.4",
    "react-icons": "^5.5.0",
    "react-markdown": "^10.1.0",
    "react-window": "^2.2.7",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@eslint/compat": "^2.0.2",
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@tailwindcss/postcss": "^4.1.18",
    "@tauri-apps/cli": "^2.10.0",
    "@types/node": "^25.2.3",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "eslint": "^9.39.2",
    "eslint-config-airbnb-extended": "^3.0.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react-refresh": "^0.5.0",
    "eslint-plugin-unused-imports": "^4.4.1",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "lint-staged": "^16.2.7",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3"
  }
}
